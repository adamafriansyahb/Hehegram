<%- include('../partials/header') %>

<div class="container container-login d-flex justify-content-center align-items-center">
    <div class="container form-login p-3 rounded">
        <%- include('../partials/messages') %> 
        <h1 class="text-center mt-3"><i class="fab fa-rocketchat fa-2x"></i></h1>
        <h3 class="text-center my-2">Login to Hehegram</h3>
        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label mb-1">Email</label>
                <input name="email" type="email" class="form-control bg-dark" id="email" placeholder="Enter your email" autocomplete="off">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label mb-1">Password</label>
                <input name="password" type="password" class="form-control bg-dark" id="password" placeholder="Enter your password">
            </div>
            <div class="d-flex justify-content-center mt-4 mb-3">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
            <div class="d-flex justify-content-center mt-2 mb-2">
                <p class="mb-1">Don't have account?<a href="/register"> Sign up</a></p>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>